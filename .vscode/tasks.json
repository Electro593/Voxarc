{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Program",
            "type": "shell",
            "command": "./build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Font Unpacker",
            "type": "shell",
            "command": "./build ttf_unpacker",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Run Program",
            "command": "./build/Voxarc.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Run Font Unpacker",
            "command": "./build/ttf_unpacker.exe",
            "group": "test"
        },
    ]
}
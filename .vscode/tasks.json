{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Voxarc",
            "command": "./do build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Build Asset Packer",
            "command": "./do tools vox_asset_packer.c AssetPacker.exe",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Build Font Unpacker",
            "command": "./do tools vox_ttf_unpacker.c FontUnpacker.exe",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "Run Voxarc",
            "command": "./build/Voxarc.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Run Asset Packer",
            "command": "./build/AssetPacker.exe",
            "group": "test"
        },
        {
            "type": "shell",
            "label": "Run Font Unpacker",
            "command": "./build/FontUnpacker.exe",
            "group": "test"
        }
    ]
}